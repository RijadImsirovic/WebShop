  <section class="ftco-section" style="background-color: #141313; width: 100vw">
    <div class="container" style="height: 100vh;">
      <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
          <div class="login-wrap p-0">
            <form action="/urediTrgovca"  enctype="multipart/form-data" method="post" class="signin-form">
              <div class="form-group">
                <input class="form-control" id="readOnlyInput" type="text" placeholder="<%=user.naziv_trgovine%>" readonly="">
                <input type="text" name="userNovi" class="form-control" placeholder="Username" required>
              </div>

              <div class="form-group">
                <input class="form-control" id="readOnlyInput" type="text" placeholder="<%=user.kontakt_telefon%>" readonly="">
                <input type="number" class="form-control" id="inputPhone" name="phoneNumberNovi" placeholder="Kontakt telefon" required>

              </div>

              <div class="form-group">
                <input class="form-control" id="readOnlyInput" type="text" placeholder="<%=user.adresa%>" readonly="">
                <input type="text" class="form-control" id="inputAdress" name="adressNovi" placeholder="Adresa" required>

              </div>

              <div class="form-group">
                <input class="form-control" id="readOnlyInput" type="text" placeholder="<%=user.email%>" readonly="">
                <input type="email" class="form-control" id="inputEmail" name="emailNovi" placeholder="E-Mail" required>
              </div>


              <div class="form-group">
                <input id="password-field" type="password" name="passwordNovi" class="form-control" placeholder="Password" required>
              </div>


              <div class="form-group">
                <input class="form-control" id="readOnlyInput" type="text" placeholder="<%=user.mjesto%>" readonly="">
                <input type="text" name="cityNovi" class="form-control" placeholder="Mjesto" required>

              </div>

              <div class="form-group">
                  <label>Odaberite novu kategoriju vaše prodavnice</label>
                  <select class="form-select" name="izborNovi">
                    <% for (let i=0; i < kategorije.length; i++) {%>
                    <option value="<%=kategorije[i].id%>"><%=kategorije[i].naziv_kategorije%></option>
                    <%}%>
                  </select>
              </div>


              <div class="form-group">
                <label for="formFile" class="form-label mt-4">Odaberite profilnu sliku</label>
                <div class="file-field">
                  <input type="file" name="slika">
                </div>
              </div>


              <div class="form-group">
                <button type="submit" class="form-control btn btn-primary submit px-3">Promijeni</button>
              </div>


            </form>
          </div>
        </div>
      </div>
    </div>
  </section>









    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
