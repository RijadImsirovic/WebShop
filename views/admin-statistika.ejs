  <script>
    const labels = [
      'Kupci',
      'Trgovci'
    ];

    const data = {
      labels: labels,
      datasets: [{
        label: 'My First dataset',
        backgroundColor: [
          'rgb(255, 205, 86)',
          'rgb(54, 162, 235)',

        ],
        borderColor: 'rgb(255,255,255)',
        data: [<%= kupci.length%>,<%= trgovci.length%>],
      }]
    };

    const config = {
      type: 'pie',
      data: data,
      options: {}
    };

    const myChart = new Chart(
            document.getElementById('myChart'),
            config
    );
  </script>

